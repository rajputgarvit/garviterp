    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function switchSettingsTab(event, tabId) {
            // Remove active class from all buttons and sections
            document.querySelectorAll('.settings-nav-item').forEach(btn => btn.classList.remove('active'));
            document.querySelectorAll('.settings-tab-content').forEach(section => section.classList.remove('active'));
            
            // Add active class to clicked button and target section
            event.currentTarget.classList.add('active');
            document.getElementById(tabId).classList.add('active');

            // Save active tab to localStorage
            localStorage.setItem('activeSettingsTab', tabId);
        }

        // Initialize from localStorage or URL hash
        document.addEventListener('DOMContentLoaded', function() {
            const lastTab = localStorage.getItem('activeSettingsTab');
            if (lastTab) {
                const targetBtn = document.querySelector(`button[onclick*="'${lastTab}'"]`);
                if (targetBtn) {
                    targetBtn.click();
                }
            }
        });

        // Handle HTML5 validation focus issues with hidden tabs
        document.querySelector('form').addEventListener('invalid', function(e) {
            const target = e.target;
            const tabContent = target.closest('.settings-tab-content');
            
            if (tabContent && !tabContent.classList.contains('active')) {
                const tabId = tabContent.id;
                const tabButton = document.querySelector(`button[onclick*="'${tabId}'"]`);
                if (tabButton) tabButton.click();
                
                setTimeout(() => target.focus(), 100);
            }
        }, true);
    </script>
